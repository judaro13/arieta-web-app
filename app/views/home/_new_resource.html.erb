<%= form_with model: @resource, id: "new_resource_form" do |form| %>

   <div id="new_resoruce_error_explanation">
   </div>

  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name,  class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :description %><br>
    <%= form.text_area :description,  class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :resource_type %><br>
    <%= form.select :resource_type, options_for_select([ "store", "analytic", "misc" ], "Store") , {}, { :class => 'form-control' }%>
  </div>


  <div class="form-group">
    <%= form.label :docker_image %><br>
    <%= form.text_field :docker_image, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :internal_port %><br>
    <%= form.text_field :internal_port, class: "form-control"  %>
  </div>

  <p>
    <%= form.submit "Create", class: "btn btn-primary", style: "float:right;" %>
  </p>
<% end %>


