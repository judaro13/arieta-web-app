
<% @services.each do |service|%>
  <% style = "card-body "+ service.status %>
  <% position = "width: 15rem;" %>
  <% position += " position: absolute;" if service.position_x || service.position_y%>
  <% position += " left: #{service.position_x.to_i}px;" if service.position_x%>
  <% position += " top: #{service.position_y.to_i - 183 +54}px;" if service.position_y%>
  <div class="card draggable  <%= style %>" style="<%=position%>" serviceId="<%= service.id%>" >
    <h6 class="card-header  <%= style %>" >
      <%= image_tag((service.resource.resource_type)+".png", class: "small-img ")%>
      <%= service.name %>
    </h6>
    <div class="card-body">
      <p class="card-text">
        <%= service.resource.docker_image %>
      </p>
      <%= link_to image_tag("gear.svg"), "#", remote: true, method: :post, title: "configure", 'data-target' =>  "#serviceSettings", 'data-toggle' => "modal" %>
      <%= link_to image_tag("rocket.svg", class: "green-image"), "#", remote: true, method: :post, title: "individual deploy" %>
      <%= link_to image_tag("trashcan.svg"), "#", remote: true, method: :post, title: "delete" %>
      <%= link_to image_tag("cloud-download.svg"), "#", remote: true, method: :post, title: "undeploy" %>
    </div>
  </div>

<% end %>
